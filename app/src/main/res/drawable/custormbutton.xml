        android:left="5dp"
        android:right="5dp"
        android:bottom="5dp"></padding>
    <gradient android:startColor="#530A60"
        android:endColor="#2B1D49"
        android:angle="90"
        ></gradient>
    <stroke android:color="@color/colorPrimary"
        android:width="2dp"
        ></stroke>

</shape>
